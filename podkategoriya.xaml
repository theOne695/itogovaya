<Page x:Class="Itogovayaa.podkategoriya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Itogovayaa"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="podkategoriya"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" Foreground="#FF1B794A">

    <Grid Background="#FF1B794A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="64*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75.179"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="7" Width="130" Height="47" FontSize="20" Background="#FF3AB742" Click="Button_Click_1"/>
        <Button Grid.Column="2" Content="Изменить" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="7" Width="130" Height="47" FontSize="20" Background="#FF3AB742" Click="Button_Click" Cursor="Hand"/>
        <Button Grid.Column="3" Content="Удалить" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="7" Width="130" Height="47" FontSize="20" Background="#FF3AB742" Click="Button_Click_2"/>
        <DataGrid x:Name="grid2" Grid.Row="0" Grid.RowSpan="8" SelectionChanged="grid_SelectionChanged"/>
        <TextBlock Grid.ColumnSpan="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Text="Данные для заполнения" FontSize="23" Foreground="White"/>
        <TextBox x:Name="name_" Width="256" Height="33" FontSize="17" HorizontalAlignment="Center" Grid.Row="1" materialDesign:HintAssist.Hint="Наименование продукта:" Grid.ColumnSpan="4" Grid.Column="1" Foreground="Black"/>
        <ComboBox x:Name="categ_" Width="256" Height="33" FontSize="17" HorizontalAlignment="Center" Grid.Row="2" materialDesign:HintAssist.Hint="Категория товара" Grid.ColumnSpan="4" Grid.Column="1" Foreground="Black"/>
    </Grid>

</Page>
